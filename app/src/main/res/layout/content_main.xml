<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.soccerveteran.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/mainback"
    >


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/type_n02"
        >

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/btn01"
                android:src="@drawable/basen1_100"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <ImageView
                android:src="@drawable/main_line"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mlinearLayout1"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:onClick="LiClick"
            >
            <TextView
                android:textColor="#FFFFFF"
                android:text="기초 챌린지"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:id="@+id/textView2"
                android:textIsSelectable="false" />

            <TextView
                android:textColor="#FFFFFF"
                android:text="Beginning Level"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textIsSelectable="false" />

            <TextView
                android:textSize="20sp"
                android:text="누구나 보고 배울 수 있는 영상 섹션"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/type_n02"
        >


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/btn02"
                android:src="@drawable/basen2_100"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:src="@drawable/main_line"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mlinearLayout2"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:onClick="LiClick"
            >

            <TextView
                android:textColor="#FFFFFF"
                android:text="일반 챌린지"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_m_title"
                />

            <TextView
                android:textColor="#FFFFFF"
                android:text="Intermediate Level"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="20sp"
                android:text="기술별로 영상을 본후 미션 도전"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/type_n02"
        >

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/btn03"
                android:src="@drawable/basen3_100"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:src="@drawable/main_line"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mlinearLayout3"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:onClick="LiClick">

            <TextView
                android:textColor="#FFFFFF"
                android:text="프리스타일 챌린지"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_m_title3"
                />

            <TextView
                android:textColor="#FFFFFF"
                android:text="Free Style Level"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="20dp"
                android:text="고난이도 프리스타일 기술에 도전하세요"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>